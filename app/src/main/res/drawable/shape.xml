<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android">
    //设置圆角
    <corners android:radius="50dp"/>
    //设置Button的大小
    <size
        android:height="60dp"
        android:width="320dp"/>
    //设置button的内边距
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>

    <stroke
        android:width="1dp"
        android:color="@android:color/holo_red_light"/>
</shape>