<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_topic_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/hot_topic_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/hot_topic_title"
            android:layout_toRightOf="@+id/hot_topic_number"
            android:layout_width="250dp"
            android:layout_height="match_parent" />

        <com.example.pokestar.universityset.Base.NetImageView
            android:id="@+id/hot_topic_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/hot_topic_title"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>